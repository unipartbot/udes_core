<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="replace">
            <t t-if="widget.modelName=='stock.picking'">
                <button class="btn btn-primary btn-sm o_list_button_add_planned" type="button">New Planned Transfer</button>
            </t>
            <t t-else="">
                <button class="btn btn-primary btn-sm o_list_button_add" type="button">Create</button>
            </t>
        </t>
    </t>

    <t t-extend="ListView.buttons">
        <t t-if="widget.modelName=='stock.picking'" t-jquery="button.o_list_button_add_planned" t-operation="after">
           <t t-call="ImportView.import_button"/>
        </t>
    </t>

</templates>